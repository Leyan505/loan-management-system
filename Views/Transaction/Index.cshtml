@model TransactionDTO

<div class="row">
    <div class="col-md-12">
        <div class="widget p-4">
            <h4 class="m-b-lg">Ventas realizadas</h4>
            <table class="table agente-transaction-table">
                <thead
                    <tr>
                        <th>Nombres</th>
                        <th>Credito</th>
                        <th>Barrio</th>
                        <th>Hora</th>
                        <th>Tasa</th>
                        <th>Cuotas</th>
                        <th>Valor neto</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(TransactionCreditDTO cred in Model.credit)
                {
                        
                    <tr>
                            <td><span class="value">@cred.name @cred.last_name</span></td>
                            <td><span class="value">@cred.credit_id</span></td>
                            <td><span class="value">@cred.province</span></td>
                            <td><span class="value">@cred.created_at.ToLocalTime()</span></td>
                            <td><span class="value">@cred.utility</span></td>
                            <td><span class="value">@cred.payment_number</span></td>
                            <td><span class="value">@cred.amount_neto</span></td>
                    </tr>
                }
                
                </tbody>
            </table>
            <footer class="widget-footer">
                <p><b>Total: </b><span class="text-success">@Model.total_summary</span></p>
            </footer>
        </div><!-- .widget -->
    </div>
</div><!-- .row -->
<div class="row">
    <div class="col-md-12">
        <div class="widget p-4">
            <h4 class="m-b-lg">Pagos Recibidos</h4>
            <table class="table agente-transactionP-table">
                <thead>
                    <tr>
                        <th>Nombres</th>
                        <th>Fecha</th>
                        <th>Credito</th>
                        <th>Cuota</th>
                        <th>Saldo</th>
                        <th>Última cuota</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(TransactionSummaryDTO sum in Model.summary)
                {  
                    <tr>
                        <td><span class="value">@sum.name @sum.last_name</span></td>
                        <td><span class="value">@sum.created_at.ToLocalTime()</span></td>
                        <td><span class="value">@sum.id_credit</span></td>
                        <td><span class="value">@sum.number_index</span></td>
                        <td><span class="value">@sum.total_payment</span></td>
                        <td><span class="value">@sum.amount</span></td>
                    </tr>
                }
                
                </tbody>
            </table>
            <footer class="widget-footer">
                <p><b>Total: </b><span class="text-success">@Model.total_summary</span></p>
            </footer>
        </div><!-- .widget -->
    </div>
</div><!-- .row -->
<div class="row">
    <div class="col-md-12">
        <div class="widget p-4">
            <h4 class="m-b-lg">Gastos</h4>
            <table class="table agente-transactionG-table">
                <thead>
                    <tr>
                        <th>Gasto</th>
                        <th>Detalle</th>
                        <th>Valor neto</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(Bills bill in Model.bills)
                {
                    <tr>
                        <td><span class="value">@bill.Type</span></td>
                        <td><span class="value">@bill.Description</span></td>
                        <td><span class="value">@bill.Amount</span></td>
                    </tr>    
                }

                </tbody>
            </table>
            <footer class="widget-footer">
                <p><b>Total: </b><span class="text-success">@Model.total_bills</span></p>
            </footer>
        </div><!-- .widget -->
    </div>
</div><!-- .row -->