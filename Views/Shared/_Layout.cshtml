<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrestamosCreciendo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrestamosCreciendo.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/ccb427f34c.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color: rgba(47, 50, 144, 0.69)">
            <div class="container-fluid">
                <a class="navbar-brand" style="text-transform:uppercase" asp-area="" asp-controller=@ViewData["Level"] asp-action="Index">
                    <img src="~/resources/images/logo.png" width="35" height="30" class="d-inline-block align-text-top">
                    @ViewData["Level"]
                </a>
                <a id="logout" type="button" asp-controller="Login" asp-action="Logout">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </a>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PrestamosCreciendo
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
