@model StatisticsDTO
@{
}

<div class="row">
    <div class="col-md-12 col-lg-8 offset-lg-2">
        <div class="widget-table">
            <header class="widget-header">
                <h4 class="widget-title">Estadistica</h4>
            </header><!-- .widget-header -->
            <hr class="widget-separator">
            <div class="widget-body">
                <form method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="wallet"> Cartera:</label>
                        <input type="text" name="wallet" value="@Model.wallet.Name" readonly class="form-control" id="wallet" required>
                    </div>
                    <div class="form-group">
                        <label for="average">Promedio Recaudado:</label>
                        <input type="text" name="average" value="@Model.summary" readonly class="form-control" id="average" required>
                    </div>
                    <div class="form-group">
                        <label for="sell">Promedio Ventas:</label>
                        <input type="text" name="sell" readonly value="@Model.credit" class="form-control" id="sell" required>
                    </div>
                    <div class="form-group">
                        <label for="sell">Promedio Gastos:</label>
                        <input type="text" name="sell" readonly value="@Model.bills" class="form-control" id="sell" required>
                    </div>
                    <div class="form-group">
                        <label for="days">Cantidad días:</label>
                        <input type="text" name="days" value="@Model.days" readonly class="form-control" id="days" required>
                    </div>
                    <div class="form-group">
                        <label for="days">Fechas:</label>
                        <input type="text" name="days" value="@Model.range" readonly class="form-control" id="days" required>
                    </div>
                </form>
            </div><!-- .widget-body -->
        </div><!-- .widget -->
    </div><!-- END column -->
</div><!-- .row -->