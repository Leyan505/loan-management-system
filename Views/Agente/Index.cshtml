@model AgentResumeDTO
@{
}
@{
}

<div class="row">
    <div class="col-12 pb-2">
        <small>Los montos siguientes son el total del día actual</small>
    </div>
    <div class="col-md-4 col-sm-6">
        <a asp-action="NewClient" asp-controller="Agente">
            <div class="widget stats-widget widget-resume">
                <div class="widget-body clearfix h-100 bg-white">
                    <div class="pull-left">
                        <h3 class="widget-title text-dark">DISPONIBLE (CAJA)</h3>
                        <h3 class="widget-title text-dark">

                            <b>@(Model.base_agent - Model.total_bill)</b>
                            @if(Model.total_summary>0)
                            {
                                <span>+</span>
                                <span class=""> @Model.total_summary</span>
                                <span class="text-success">= @(Model.base_agent - Model.total_bill + Model.total_summary)</span>
                            }
                            

                        </h3>
                    </div>
                    <span class="pull-right big-icon text-danger watermark"><i class="fa fa-arrow-down"></i></span>
                </div>
            </div><!-- .widget -->
        </a>

    </div>
    <div class="col-md-4 col-sm-6">
        <a asp-action="Create" asp-controller="Transaction">
            <div class="widget stats-widget widget-resume">
                <div class="widget-body h-100 clearfix bg-white">
                    <div class="pull-left">
                        <h3 class="widget-title text-dark">RECAUDADO</h3>
                        <h3 class="widget-title text-dark"><b>@Model.total_summary</b></h3>
                    </div>
                    <span class="pull-right big-icon text-success watermark"><i class="fa fa-arrow-up"></i></span>
                </div>
            </div><!-- .widget -->
        </a>

    </div>
    <div class="col-md-4 col-sm-6">
        <a asp-action="Index" asp-controller="Bill">
            <div class="widget stats-widget widget-resume">
                <div class="widget-body h-100 clearfix bg-white">
                    <div class="pull-left">
                        <h3 class="widget-title text-dark">GASTOS</h3>
                        <h3 class="widget-title text-dark"><b>@Model.total_bill</b></h3>
                    </div>
                    <span class="pull-right big-icon text-warning watermark"><i class="fa fa-arrow-right"></i></span>
                </div>
            </div><!-- .widget -->
        </a>

    </div>
    <div class="clearfix"></div>
    <div class="row m-0 d-block col-12 pb-4">
        <hr>
    </div>
    <div class="col-md-3 col-sm-6">
        <a asp-controller="Agente" asp-action="NewClient">
            <div class="widget">
                <div class="widget-body clearfix" style="background-color: rgb(201,203,226)">
                    <div class="pull-left">
                        <h3 class="widget-title text-black">
                            Cliente nuevo
                        </h3>
                    </div>
                    <span class="pull-right big-icon watermark">
                        <i class="fa-solid fa-user"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <a asp-controller="Agente" asp-action="ShowClients">
            <div class="widget">
                <div class="widget-body clearfix" style="background-color: rgb(242,223,165)">
                    <div class="pull-left">
                        <h3 class="widget-title text-black">
                            Mostrar clientes
                        </h3>
                    </div>
                    <span class="pull-right big-icon watermark">
                        <i class="fa-solid fa-th-list"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <a asp-controller="Agente" asp-action="Simulator">
            <div class="widget">
                <div class="widget-body clearfix" style="background-color: rgb(223,242,213)">
                    <div class="pull-left">
                        <h3 class="widget-title text-black">
                            Simulador
                        </h3>
                    </div>
                    <span class="pull-right big-icon watermark">
                        <i class="fa-solid fa-calculator"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <a asp-controller="payment" asp-action="Index">
            <div class="widget">
                <div class="widget-body clearfix" style="background-color: rgb(250,217,200)">
                    <div class="pull-left">
                        <h3 class="widget-title text-black">
                            Registrar pago
                        </h3>
                    </div>
                    <span class="pull-right big-icon watermark">
                        <i class="fa-solid fa-money-bill"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <a asp-controller="Route" asp-action="Index">
            <div class="widget">
                <div class="widget-body clearfix" style="background-color: rgb(128,171,221)">
                    <div class="pull-left">
                        <h3 class="widget-title text-black">
                            Iniciar ruta
                        </h3>
                    </div>
                    <span class="pull-right big-icon watermark">
                        <i class="fa-solid fa-car"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <a asp-controller="Agente" asp-action="HistoryIndex">
            <div class="widget">
                <div class="widget-body clearfix" style="background-color: rgb(168,230,207)">
                    <div class="pull-left">
                        <h3 class="widget-title text-black">
                            Historial cierre
                        </h3>
                    </div>
                    <span class="pull-right big-icon watermark">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <a asp-controller="Transaction" asp-action="Create">
            <div class="widget">
                <div class="widget-body clearfix" style="background-color: rgb(255,139,148)">
                    <div class="pull-left">
                        <h3 class="widget-title text-black">
                            Transacciones
                        </h3>
                    </div>
                    <span class="pull-right big-icon watermark">
                        <i class="fa-solid fa-list-ol"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 col-sm-6">
        <a asp-controller="Bill" asp-action="Index">
            <div class="widget">
                <div class="widget-body clearfix" style="background-color: rgb(186,225,255)">
                    <div class="pull-left">
                        <h3 class="widget-title text-black">
                            Gastos
                        </h3>
                    </div>
                    <span class="pull-right big-icon watermark">
                        <i class="fa-solid fa-cart-plus"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
</div>

