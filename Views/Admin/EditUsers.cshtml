@model Users
@{
}
<div class="row">
    <div class="col-md-12 col-lg-8 offset-lg-2">
        <div class="widget">
            <header class="widget-header">
                <h4 class="widget-title">Editar usuario</h4>
            </header><!-- .widget-header -->
            <hr class="widget-separator">
            <div class="widget-body">
                <form method="POST" asp-controller="Admin" asp-action="EditUsers">
                    <div class="form-group">
                        <label for="Email">Usuario:</label>
                        <input type="text" asp-for="Email" class="form-control" id="username" required="" autocomplete="off" value=@Model.Email >
                    </div>
                    <div class="form-group">
                        <label for="name">Nombre:</label>
                        <input type="text" asp-for="Name" class="form-control" id="name" required="" value=@Model.Name >
                    </div>
                    <div class="form-group">
                        <label for="pwd">Contraseña:</label>
                        <input type="password" asp-for="Password" class="form-control" id="pwd" required="">
                    </div>
                    @if(!Model.Level.Equals("admin"))
                    {
                        <div class="form-group">
                            <label for="level">Nivel:</label>
                            <select asp-for="Level" class="form-control" id="level" value=@Model.Level>
                                <option value="agente">Agente</option>
                                <option value="supervisor">Supervisor</option>
                            </select>
                        </div>
                    }

                    <div class="form-group">
                        <div class="d-grid">
                            <button type="submit" class="btn text-white" style="background-color:rgb(47, 50, 144);">Guardar</button>
                        </div>
                    </div>
                </form>

            </div><!-- .widget-body -->
        </div><!-- .widget -->
    </div><!-- END column -->
</div>
