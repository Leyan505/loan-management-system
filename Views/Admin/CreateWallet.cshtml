@model Wallet
@{
}
<div class="row">
    <div class="col-md-12 col-lg-8 offset-lg-2">
        <div class="widget">
            <header class="widget-header">
                <h4 class="widget-title">Agregar cartera</h4>
            </header><!-- .widget-header -->
            <hr class="widget-separator">
            <div class="widget-body">
                <form method="POST" asp-controller="Admin" asp-action="CreateWallet">
                    <div class="form-group">
                        <label for="Name">Nombre:</label>
                        <input type="text" asp-for="Name" class="form-control" id="name" required="" autocomplete="off">
                    </div>

                    <div class="form-group">
                        <label for="city">Ciudad:</label>
                        <input type="text" asp-for="City" class="form-control" id="city" required="">
                    </div>
                    <div class="form-group">
                        <label for="country">Pais:</label>
                        <select asp-for="Country" class="form-control" id="country">
                            <option value="0">Nicaragua</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <div class="d-grid">
                            <button type="submit" class="btn text-white" style="background-color:rgb(47, 50, 144);">Guardar</button>
                        </div>
                    </div>
                </form>

            </div><!-- .widget-body -->
        </div><!-- .widget -->
    </div><!-- END column -->
</div>

<script>
    window.onload = function () {
        document.getElementById('name').value = '';
        document.getElementById('city').value = '';
    }

</script>