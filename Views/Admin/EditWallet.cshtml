@model Wallet
@{
}
<div class="row">
    <div class="col-md-12 col-lg-8 offset-lg-2">
        <div class="widget">
            <header class="widget-header">
                <h4 class="widget-title">Editar usuario</h4>
            </header><!-- .widget-header -->
            <hr class="widget-separator">
            <div class="widget-body">
                <form method="POST" asp-controller="Admin" asp-action="EditWallet">
                    <div class="form-group">
                        <label for="Email">Nombre:</label>
                        <input type="text" asp-for="Name" class="form-control" id="name" required="" autocomplete="off" value=@Model.Name>
                    </div>
                    <div class="form-group">
                        <label for="name">Ciudad:</label>
                        <input type="text" asp-for="City" class="form-control" id="city" required="" value=@Model.City>
                    </div>
                    <div class="form-group">
                        <div class="d-grid">
                            <button type="submit" class="btn text-white" style="background-color:rgb(47, 50, 144);">Guardar</button>
                        </div>
                    </div>
                </form>

            </div><!-- .widget-body -->
        </div><!-- .widget -->
    </div><!-- END column -->
</div>
