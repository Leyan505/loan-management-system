@model ClientEditDTO
@{
}
<div class="row">
    <div class="col-md-12 col-lg-8 offset-lg-2">
        <div class="widget">
            <div class="widget-body">
                <form method="POST" asp-action="Update" asp-controller="Client" class="supervisor-client" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="country"> Pais:</label>
                        <select name="country" class="form-control" id="country">
                            @foreach(Countries country in Model.countries)
                            {
                                <option value="@country.Id">@country.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="wallet"> Cartera:</label>
                        <select name="wallet" class="form-control" id="wallet">
                            <option selected>Selecionar....</option>
                            @foreach(WalletDTO w in Model.wallets)
                            {
                                <option value="@w.id">@w.name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="agent"> Agente:</label>
                        <select name="agent" class="form-control" id="agent">
                            @foreach(agentDTO a in Model.agents)
                            {
                                <option value="@a.id">@a.name @a.last_name</option>
                            }

                        </select>
                    </div>
                    @if (Model.error != null)
                    {
                        @if (Model.error.ShowDescription)
                        {
                            <p style="color:red;">@Model.error.description</p>
                        }
                    }
                    <div class="form-group">
                        <div class="d-grid">
                            <button type="submit" class="hidden btn text-white" style="background-color:rgb(47, 50, 144);">Guardar</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="d-grid">
                            <a id="link_client_audit" class="btn text-white" style="background-color:rgb(47, 50, 144);" disabled asp-action="Show" asp-controller="Client">Auditar</a>
                        </div>

                    </div>
                </form>

            </div><!-- .widget-body -->
        </div><!-- .widget -->
    </div><!-- END column -->
</div><!-- .row -->