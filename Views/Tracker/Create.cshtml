@model int

<div class="row">
    <div class="col-md-12 col-lg-8 offset-lg-2">
        <div class="widget">
            <header class="widget-header">
                <h4 class="widget-title">Rastreo</h4>
            </header><!-- .widget-header -->
            <hr class="widget-separator">
            <div class="widget-body">
                <form method="GET" asp-action="Summary" asp-controller="Tracker" asp-route-id="@Model" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="nit_number"> Fecha:</label>
                        <input type="date" name="date_start" class="form-control" id="date_start" required>
                    </div>
                    <div class="form-group">
                        <div class="d-grid">
                            <button type="submit" class="btn text-white" style="background-color:rgb(47, 50, 144);">Buscar</button>
                        </div>
                    </div>
                </form>

            </div><!-- .widget-body -->
        </div><!-- .widget -->
    </div><!-- END column -->
</div><!-- .row -->
